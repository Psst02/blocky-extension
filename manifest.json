{
  "name": "BLOCKY",
  "description": "Blocky is a Chrome extension that blocks online ads, popups, and trackers.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "icons/color48.png"
  },
  "icons": {
    "16": "icons/color16.png",
    "32": "icons/color32.png",
    "48": "icons/color48.png",
    "128": "icons/color128.png"
  },
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "src/rules.json"
    }]
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "http://www.blogger.com/*",
    "http://*.google.com/*"
  ]
}